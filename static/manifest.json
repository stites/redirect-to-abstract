{
  "manifest_version": 2,

  "name": "redirect-to-abstract",
  "version": "1.1.5",
  "description": "Redirect pdf links to their abstract.",

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [{
      "matches": [
          "*://arxiv.org/*",
          "*://*.mlr.press/**",
          "*://*.neurips.cc/**",
          "*://*.nips.cc/**",
          "*://openreview.net/*" ,
          "*://aclanthology.org/*",
          "*://biorxiv.org/*",
          "*://ijcai.org/*"
      ],
    "js": ["content.js"],
    "run_at": "document_idle"
  }],

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://arxiv.org/*",
    "*://*.mlr.press/*",
    "*://*.neurips.cc/*",
    "*://*.nips.cc/*",
    "*://openreview.net/*",
    "*://aclanthology.org/*",
    "*://biorxiv.org/*",
    "*://icjai.org/*"
  ],

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
